// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Question {
  id       Int    @id @default(autoincrement())
  question String
  reponse  String
  
  @@map("questions")
}

model Lock {
  id           Int       @id @default(1)
  isOpen       Boolean   @default(true)
  holderIp     String?   // IP qui détient le lock
  acquiredAt   DateTime? // quand le lock a été acquis
  updatedAt    DateTime  @updatedAt

  @@map("lock")
}

model QueueEntry {
  id        Int      @id @default(autoincrement())
  ip        String
  createdAt DateTime @default(now())

  @@unique([ip])
  @@map("queue_entries")
}
